<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
              android:layout_width="match_parent"
              android:layout_height="300dp">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/row_post_image"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="410dp"
            android:layout_height="61dp" app:srcCompat="@drawable/black_gradient"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="107dp"
            android:layout_height="31dp"
            android:id="@+id/row_postTitle"
            app:layout_constraintTop_toTopOf="@+id/row_post_image" android:layout_marginTop="252dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>