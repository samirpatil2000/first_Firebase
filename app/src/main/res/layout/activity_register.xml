<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.RegisterActivity">
    <!--    <ImageView-->
    <!--            android:layout_width="196dp"-->
    <!--            android:layout_height="154dp" tools:src="@drawable/profile_1"-->
    <!--            android:id="@+id/imageView"-->
    <!--            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="116dp"-->
    <!--            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"-->
    <!--            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="117dp"-->
    <!--            app:layout_constraintHorizontal_bias="0.444"/>-->
    <ImageView
            android:layout_width="163dp"
            android:layout_height="131dp" app:srcCompat="@drawable/profile"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintHorizontal_bias="0.532"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:hint="Enter Your Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp" android:hint="Enter Email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:hint="password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:hint="confirm password" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.209"
            android:layout_marginBottom="136dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:id="@+id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginEnd="2dp" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>