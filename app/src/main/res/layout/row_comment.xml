<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="67dp"
            android:layout_height="66dp" tools:srcCompat="@tools:sample/backgrounds/scenic[18]"
            android:id="@+id/comment_userImg" android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:text="samir patil"
            android:layout_width="79dp"
            android:layout_height="26dp"
            android:id="@+id/comment_username" android:textColor="#F80820F5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/comment_userImg" android:layout_marginStart="23dp"/>
    <TextView
            android:text="This is  comment "
            android:layout_width="298dp"
            android:layout_height="42dp"
            android:id="@+id/comment_textView"
            android:layout_marginStart="23dp"
            app:layout_constraintStart_toEndOf="@+id/comment_userImg" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comment_username"/>
</androidx.constraintlayout.widget.ConstraintLayout>