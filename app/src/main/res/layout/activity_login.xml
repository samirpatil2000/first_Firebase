<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.LoginActivity">

    <EditText
            android:layout_width="261dp"
            android:layout_height="54dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText6"
            android:hint="password" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/editText7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="75dp"/>
    <EditText
            android:layout_width="261dp"
            android:layout_height="49dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText7"
            android:hint="Email" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="75dp"
            android:layout_marginTop="220dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Log in"
            android:layout_width="120dp"
            android:layout_height="62dp"
            android:id="@+id/loginButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="272dp"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/editText6"
            app:layout_constraintVertical_bias="1.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="82dp"
            android:layout_height="66dp"
            android:id="@+id/progressBar2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="164dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="189dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton" app:layout_constraintVertical_bias="0.555"/>
</androidx.constraintlayout.widget.ConstraintLayout>